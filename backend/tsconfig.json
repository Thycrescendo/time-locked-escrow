{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build",
    "rootDir": "./",
    "lib": ["es2020"],
    "types": ["node", "jest"]
  },
  "include": ["contracts/**/*", "scripts/**/*", "tests/**/*"],
  "exclude": ["node_modules"]
}